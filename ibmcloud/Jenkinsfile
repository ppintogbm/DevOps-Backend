pipeline{
	agent {
		kubernetes{
			cloud "kubernetes"
			label "backend-build"
			yamlFile "ibmcloud/BuildPod.yaml"
		}
  }
	parameters{
		string(defaultValue: "namespacecda", description: "Project/Namespace name", name: "project")
		string(defaultValue: "us.icr.io", description: "Registry",  name:"registry")
		string(defaultValue: "calculadora", description: "App Name", name: "app")
	}
	stages{
		stage('Prepare'){
			steps{
				script{
					tag = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
				}
			}
		}
		stage('Build Bars'){
			steps{
				container('ace'){
					sh "bash -c 'mqsipackagebar -a compiled.bar -w . -k ApiCalculadora'"
				}
			}
   	}
		stage('Build ACE'){
			environment {
				PATH = "/busybox:/kaniko:$PATH"
				REGISTRY = "${registry}"
				NAMESPACE = "${project}"
				IMAGE = "${app}"
				TAG = "${tag}"
			}
			steps{
				container('kaniko'){
					sh  '''#!/busybox/sh
							echo "Building $REGISTRY/$NAMESPACE/$IMAGE-api:$TAG"
							/kaniko/executor --dockerfile=Dockerfile --context=dir://`pwd` --destination="$REGISTRY/$NAMESPACE/$IMAGE-api:$TAG"
							'''
				}
			}
		}
		stage('Build DB'){
			environment {
				PATH = "/busybox:/kaniko:$PATH"
				REGISTRY = "${registry}"
				NAMESPACE = "${project}"
				IMAGE = "${app}"
				TAG = "${tag}"
			}
			steps{
				container('kaniko'){
					sh  '''#!/busybox/sh
							echo echo "Building $REGISTRY/$NAMESPACE/$IMAGE-db:$TAG"
							/kaniko/executor --dockerfile=`pwd`/database/Dockerfile --context=dir://`pwd`/database/ --destination="$REGISTRY/$NAMESPACE/$IMAGE-db:$TAG""
							'''
				}	
			}
		}
	}
}